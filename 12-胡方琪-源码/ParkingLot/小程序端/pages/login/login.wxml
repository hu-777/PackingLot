<!--login.wxml-->
<navigation-bar title="智能停车场系统" back="{{false}}" color="black" background="#FFF"></navigation-bar>
      <view class="top-box">
  <view>Hi</view>
  <view class="next-text">欢迎使用智能停车场系统！</view>
</view>
<!-- 登录 -->
<view class="center-box">
  <view class="nav">
    <view bindtap="click" >
      <text id="login">登录</text>
    </view>
  </view>
  <!-- 登录 -->
  <view class="input-box">
    <view class="wei-input">
      <icon type="waiting" color="#44ADFB" size="16"></icon>
      <input class="shoujihao" auto-focus placeholder="请输入手机号/登录名" color="gray"/>
    </view>
    <view class="wei-input">
      <icon type="success" color="#44ADFB" size="16"></icon>
      <input class="password" auto-focus placeholder="请输入登录密码"/>
    </view>
    <view class="forget">
      <text>忘记密码?</text>
    </view>
  </view>
  <view class="sumbit-btn">
    <button class="button" bindtap="loginBtn"
    style="background-color: #33ccff;font-size: 30rpx;" 
    type="primary">立即登录</button>
  </view>
</view>
<!-- 重影 -->
<view class="shadow shadow-1"></view><view class="shadow shadow-2"></view>
