<!--pages/register/register.wxml-->
<text>智能停车场系统</text>
<navigation-bar title="智能停车场系统" back="{{false}}" color="black" background="#FFF"></navigation-bar>
      <view class="top-box">
  <view>Hi</view>
  <view class="next-text">欢迎使用智能停车场系统！</view>
</view>
<!-- 注册 -->
<view class="center-box">
  <view class="nav">
    <view bindtap="click" >
      <text id="register">注册</text>
    </view>
  </view>
  <form bindsubmit="RegisterBindSubmit">
    <view class="input-box">
    <view class="wei-input">
      <icon type="waiting" color="#44ADFB" size="16"></icon>
      <input name="shoujihao" auto-focus color="gray"placeholder="请输入手机号"/>
    </view>
    <view class="wei-input">
      <icon type="waiting" color="#44ADFB" size="16"></icon>
      <input name="chepaihao" auto-focus color="gray" placeholder="请输入您的车牌号"/>
    </view>
    <view class="wei-input">
      <icon type="waiting" color="#44ADFB" size="16"></icon>
      <input name="password" id="psw" auto-focus  color="gray" placeholder="请输入密码"/>
    </view>
    <view class="wei-input">
      <icon type="waiting" color="#44ADFB" size="16"></icon>
      <input class="confirmPassword" id="checkpsw" auto-focus placeholder="请确认密码" color="gray"/>
    </view>
  </view>
  <view class="sumbit-btn">
    <button bind:tap="registerBtn"
    style="background-color: #33ccff;font-size: 30rpx;" 
    type="primary">立即注册</button>
  </view>
  </form>
</view>
<!-- 重影 -->
<view class="shadow shadow-1"></view><view class="shadow shadow-2"></view>
